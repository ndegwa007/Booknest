<div class="form-container">
  <h1>Sign Up</h1>
  <%= form_with model: @user, url: signup_path, class: 'form' do |form| %>
    <div class="form-field">
      <%= form.label :email, 'Email', class: 'form-label' %>
      <%= form.email_field :email, required: true, class: 'form-input' %>
    </div>
    <div class="form-field">
      <%= form.label :password, 'Password', class: 'form-label' %>
      <%= form.password_field :password, required: true, class: 'form-input' %>
    </div>
    <div class="form-field">
      <%= form.label :password_confirmation, 'Confirm Password', class: 'form-label' %>
      <%= form.password_field :password_confirmation, required: true, class: 'form-input' %>
    </div>
    <div class="form-actions">
      <%= form.submit 'Sign Up', class: 'form-button' %>
    </div>
  <% end %>
  <p class="form-footer">
    Already have an account? <%= link_to 'Log In', login_path, class: 'form-link' %>
  </p>
</div>